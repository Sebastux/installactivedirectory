# {{ ansible_managed }}

# Surveillance du fichier de config du deamon wapt
check file wapt_ini with path /opt/wapt/conf/waptserver.ini

# Surveillance des permissions
if failed permission 640 then unmonitor
if failed uid wapt then unmonitor
if failed gid root then unmonitor

# Hash du fichier
if failed checksum and expect the {{ wapt.stat.checksum }}
then alert

# Envoie dâ€™une alerte si la somme SHA1 du fichier change
if changed sha1 checksum then stop

# Ajout dans un groupe
group fichierconfig
