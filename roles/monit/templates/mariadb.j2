# {{ ansible_managed }}

# Surveillance du service nginx
check process MariaDB with pidfile /var/lib/mysql/{{ ansible_hostname }}.pid

# Gestion du daemon
start program  "/usr/bin/systemctl start mariadb"
stop program  "/usr/bin/systemctl stop mariadb"
restart program  "/usr/bin/systemctl restart mariadb"

# Conditions de surveillance
if failed host {{ ansible_default_ipv4.address }} port 3306 then restart
if 5 restarts within 5 cycles then timeout

# Ajout du soft dans un groupe
group database
